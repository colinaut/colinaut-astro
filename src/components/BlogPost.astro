---
import Author from './Author.astro';
import dayjs from 'dayjs'

export interface Props {
  title: string;
  author: string;
  date: string;
  heroImage: string;
}

const { title, author, date, heroImage, alt } = Astro.props;
---

<div class="layout">
  <article class="max-w-screen-xl mx-auto">
    <header>
      {heroImage && <img width="720" height="420" class="hero-image" loading="lazy" src={heroImage} alt={alt} />}
      <h1 class="text-4xl font-bold text-wine-700 mb-base">{title}</h1>
      <h3 class="text-lg">{dayjs(date).format('MMM D YYYY')}</h3>
    </header>
    <main class="prose py-base">
      <slot />
    </main>
  </article>
</div>

<style>
.hero-image {
  width: 100vw;
  object-fit: cover;
  object-position: center;
  margin-top: 2rem;
  margin-bottom: 4rem;
  max-width: 1280px;
}

@media (max-width: 50em) {
  .hero-image {
    height: 260px;
  margin-top: 0;
  margin-bottom: 2rem;
  }
}

.content {
  margin-bottom: 8rem;
}

.content :global(main > * + *) {
  margin-top: 1rem;
}

.content :global(h2) {
  margin-top: 4rem;
}

header {
  display: flex;
  flex-direction: column;
  text-align: center;
  align-items: center;
  justify-content: center;

  padding-bottom: 2rem;
  margin-bottom: 2rem;
  border-bottom: 4px solid var(--theme-divider);
}


</style>
