---
import { Markdown } from 'astro/components';
import BaseHead from '../components/BaseHead.astro';
import BlogPost from '../components/BlogPost.astro';

const {content} = Astro.props;
const {title, description, publishDate, author, heroImage, permalink, alt} = content;
---
<html lang={ content.lang || 'en' }>
  <head>
    <BaseHead title={title} description={description} permalink={permalink} />
  </head>

  <body>
    <div class="grid max-w-screen-xl mx-auto sm:grid-cols-2">
      <div class="py-base">
        <a href="/"><img src="/assets/portrait-lg.jpg" alt="Illustration of me"></a>
      </div>
      <div class="px-6 py-md">
          <BlogPost title={title} author={author} heroImage={heroImage} publishDate={publishDate} alt={alt}>
            <slot />
          </BlogPost>
          <div><a class="underline" href="/blog">Back to Blog</a></div>
      </div>
    </div>
  </body>
</html>

